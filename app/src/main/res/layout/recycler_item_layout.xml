<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/transparent"
    android:background="@drawable/spinner_item_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingEnd="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="#fff"
        android:layout_height="match_parent">





    <ImageView
        android:layout_marginStart="0dp"
        android:id="@+id/loanindicator"
        android:layout_width="20dp"
        android:layout_gravity="center"
        android:layout_height="20dp"
        android:background="@drawable/circlebutton_notpressed" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Loan Application"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/montsemibold"
                android:textColor="#232324"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/statustext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Under Review"
                android:alpha="0.5"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/montregular"
                android:textColor="#232324"
                android:textSize="15sp" />



            <TextView
                android:id="@+id/duedatetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Due date"
                android:layout_marginTop="5dp"
                android:alpha="1"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/montsemibold"
                android:textColor="#3B8FF0"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/interest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Principal"
                android:layout_marginTop="5dp"
                android:alpha="1"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/montsemibold"
                android:textColor="#3B8FF0"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/principal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Interest"
                android:layout_marginTop="5dp"
                android:alpha="1"
                android:layout_marginStart="20dp"
                android:textAlignment="center"
                android:fontFamily="@font/montsemibold"
                android:textColor="#3B8FF0"
                android:textSize="10sp" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/amounttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GHs 50.00"
            android:textColor="#3B8FF0"
            android:gravity="end"
            android:textSize="20sp"
            android:fontFamily="@font/montbold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/timetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="233akmda"
            android:textAlignment="viewEnd"
            android:alpha="0.9"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montregular"
            android:textColor="#232324"
            android:textSize="10sp" />

    </LinearLayout>






    </LinearLayout>

</androidx.cardview.widget.CardView>