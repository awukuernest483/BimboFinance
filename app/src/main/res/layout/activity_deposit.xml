<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".DepositActivity">


  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="70dp">


    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="200dp"
        app:cardElevation="0dp">

      <FrameLayout
          android:id="@+id/backbutton"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:background="#3B8FF0" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_arrow"
            android:backgroundTint="#3B8FF0"
            android:rotation="180" />


      </FrameLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="90dp"
        android:fontFamily="@font/montbold"
        android:text="Deposit money"
        android:textColor="#3B8FF0"
        android:textSize="20sp" />

  </FrameLayout>






  <WebView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:overScrollMode="never"
      android:layout_marginTop="70dp"
      android:id="@+id/webView"/>

  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/spin"
      android:layout_marginTop="70dp"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      app:lottie_clipToCompositionBounds="true"
      app:lottie_fileName="spin.json"
      android:layout_gravity="center"/>


</FrameLayout>